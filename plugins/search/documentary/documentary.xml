    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.1.2</version>
	<creationDate>16 June, 2013</creationDate>
	<description>PLG_SEARCH_CROWDFUNDING_DESCRIPTION</description>
	<files>
		<filename plugin="documentary">documentary.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_search_documentary.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_documentary.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="20"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>

                <field name="search_area" type="radio"
                    label="PLG_SEARCH_CROWDFUNDING_SEARCH_AREA"
                    description="PLG_SEARCH_CROWDFUNDING_SEARCH_AREA_DESC"
                    default="0"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
			</fieldset>
		</fields>
	</config>
</extension>
